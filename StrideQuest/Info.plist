<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <key>CFBundleDocumentTypes</key>
    <array>
        <dict>
            <key>CFBundleTypeName</key>
            <string>MKDirectionsRequest</string>
            <key>LSItemContentTypes</key>
            <array>
                <string>com.apple.maps.directionsrequest</string>
            </array>
        </dict>
    </array>
    <key>MKDirectionsApplicationSupportedModes</key>
    <array>
        <string>MKDirectionsModeBike</string>
        <string>MKDirectionsModeFerry</string>
        <string>MKDirectionsModePedestrian</string>
    </array>
    <key>BGTaskSchedulerPermittedIdentifiers</key>
    <array>
        <string>com.ellinorlindstrom.StrideQuest.StrideQuest.healthkitfetch</string>
    </array>
    <key>UIBackgroundModes</key>
    <array>
        <string>processing</string>
        <string>fetch</string>
        <string>health-kit</string>
    </array>
    <!-- Added HealthKit Permission Descriptions -->
    <key>NSHealthShareUsageDescription</key>
    <string>We need access to your health data to track your walking and running distance for your virtual journey progress.</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>We need permission to save your completed distances to HealthKit.</string>
    <!-- Location Permissions if you're using them -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>We use your location to show your position on the virtual journey map.</string>
    <key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
    <string>We use your location to track your progress on virtual journeys even when the app is in the background.</string>
    <!-- Accesibility -->
    <key>UIAccessibilityEnabled</key>
    <true/>
    <key>NSMicrophoneUsageDescription</key>
    <string>Used for accessibility voice control features</string>
    <key>NSSpeechRecognitionUsageDescription</key>
    <string>Used for accessibility voice control features</string>
</dict>
</plist>
