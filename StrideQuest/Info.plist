<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDocumentTypes</key>
	<array>
		<dict>
			<key>CFBundleTypeName</key>
			<string>MKDirectionsRequest</string>
			<key>LSItemContentTypes</key>
			<array>
				<string>com.apple.maps.directionsrequest</string>
			</array>
		</dict>
	</array>
	<key>MKDirectionsApplicationSupportedModes</key>
	<array>
		<string>MKDirectionsModeBike</string>
		<string>MKDirectionsModeFerry</string>
		<string>MKDirectionsModePedestrian</string>
	</array>
    <!-- Required background modes for tracking -->
    <key>UIBackgroundModes</key>
    <array>
        <string>location</string>
        <string>processing</string>
	</array>
    
    <!-- HealthKit permissions -->
    <key>NSHealthShareUsageDescription</key>
    <string>StrideQuest needs access to your health data to track your journey progress</string>
    <key>NSHealthUpdateUsageDescription</key>
    <string>StrideQuest needs permission to track your steps and distance</string>

    
    <key>NSFaceIDUsageDescription</key>
    <string>We use Face ID for signing you in securely.</string>
    
    <!-- Privacy - Location permissions -->
    <key>NSLocationWhenInUseUsageDescription</key>
    <string>StrideQuest needs your location to track your progress on the map</string>
    
    <!-- Silence document warning -->
    <key>LSSupportsOpeningDocumentsInPlace</key>
    <false/>
    <key>UISupportsDocumentBrowser</key>
    <false/>


</dict>
</plist>
